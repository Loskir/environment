#!/bin/sh
# Работа с личной папкой.

USER=ai
DIR=/home/$USER/
STORE=$DIR/.Личное
LINK=$DIR/Рабочий\ стол/Личное

THUMBS=$DIR/.thumbnails
THUMBS_COPY=$THUMBS~
THUMBS_PRIVATED=$STORE/.thumbnails

if [ -e "$LINK" ]; then
    # Прячем
    chown -R root:root "$STORE"
    
    rm "$LINK"
    
    mv $THUMBS $THUMBS_PRIVATED
    mv $THUMBS_COPY $THUMBS
else
    # Показываем
    mv $THUMBS $THUMBS_COPY
    mv $THUMBS_PRIVATED $THUMBS
    
    chown -R $USER:$USER "$STORE"
    
    ln -s "$STORE" "$LINK"
    su -c "gnome-open '$LINK'" $USER
fi
